{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Deadlock Map Companion",
    "version": "1.0.0",
    "minimum_overwolf_version": "0.198.0",
    "author": "Developer",
    "icon": "icon.png",
    "icon_gray": "icon_gray.png",
    "description": "Tactical map analysis for Deadlock"
  },
  "permissions": [
    "DesktopStreaming",
    "FileSystem"
  ],
  "data": {
    "start_window": "MainWindow",
    "windows": {
      "MainWindow": {
        "file": "index.html",
        "style": {
          "dim_mode": "InGame"
        },
        "size": {
          "width": 1200,
          "height": 800
        },
        "min_size": {
          "width": 600,
          "height": 400
        },
        "desktop_only": false,
        "transparent": false,
        "resizable": true,
        "use_os_windowing": true
      }
    }
  }
}