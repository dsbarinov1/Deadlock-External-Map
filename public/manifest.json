
{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Deadlock Map Companion",
    "author": "Developer",
    "version": "1.1.7",
    "minimum-overwolf-version": "0.219.0",
    "description": "Tactical map analysis for Deadlock",
    "icon": "icon.png",
    "icon_gray": "icon_gray.png"
  },
  "permissions": [
    "GameInfo",
    "DesktopStreaming",
    "FileSystem",
    "Hotkeys"
  ],
  "game_targeting": {
    "type": "dedicated",
    "game_ids": [24201]
  },
  "launch_events": [
    {
      "event": "GameLaunch",
      "threshold": {
        "game_id": 24201
      }
    }
  ],
  "hotkeys": {
    "toggle_app": {
      "title": "Show/Hide Companion",
      "action-type": "custom",
      "default": "Ctrl+D"
    }
  },
  "data": {
    "start_window": "background",
    "windows": {
      "background": {
        "file": "index.html",
        "is_background_page": true,
        "native_window": false
      },
      "desktop": {
        "file": "index.html",
        "desktop_only": true,
        "native_window": false,
        "resizable": true,
        "transparent": false,
        "size": {
          "width": 1200,
          "height": 800
        },
        "min_size": {
          "width": 600,
          "height": 400
        }
      },
      "in_game": {
        "file": "index.html",
        "in_game_only": true,
        "desktop_only": false,
        "native_window": false,
        "resizable": false,
        "transparent": true,
        "click_through": true,
        "focus_game_takeover": "ReleaseOnHidden",
        "size": {
          "width": 1200,
          "height": 800
        }
      }
    }
  }
}
